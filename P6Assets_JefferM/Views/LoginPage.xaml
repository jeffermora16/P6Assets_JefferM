<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P6Assets_JefferM.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="loginbackground" >
    
    <VerticalStackLayout VerticalOptions="Center" Padding="20, 0, 20, 0">
        
        <Entry x:Name="TxtEmail" Placeholder="Email..." FontSize="20" Keyboard="Email" TextColor="WhiteSmoke" PlaceholderColor="WhiteSmoke" />

        <Entry x:Name="TxtPassword" Placeholder="Password..." FontSize="20" Keyboard="Text" IsPassword="True" TextColor="WhiteSmoke" PlaceholderColor="WhiteSmoke" />
        <Switch x:Name="SwVerPassword" IsToggled="False" Toggled="SwVerPassword_Toggled" />

        <Button x:Name="BtnIngresar" Text="LOGIN" BackgroundColor="Green" TextColor="White" Clicked="BtnIngresar_Clicked" Margin="0, 5, 0, 15" />

        <Button x:Name="BtnSignUp" Text="SIGN UP" Clicked="BtnSignUp_Clicked" />

        <Label x:Name="LblPasswordRecovery" Text="Password Recovery..." TextColor="#8E8641" HorizontalTextAlignment="End" Margin="0, 10, 205, 0" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Label.GestureRecognizers>
        </Label>
        
    </VerticalStackLayout>
        
</ContentPage>